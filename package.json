{
  "name": "rehype-plugin-advanced-code",
  "version": "1.1.0",
  "description": "Syntax Highlighting and more for code tags",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**.ts",
    "build": "tsc -b src/tsconfig.json && npm run build:cjs && npm run build:esm",
    "build:esm": "esbuild src/index.ts --platform=node --target=node11 --format=esm --outdir=dist/esm",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --external:shiki --target=node11 --format=cjs --outdir=dist/cjs",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BenoitAverty/rehype-plugin-advanced-code.git"
  },
  "keywords": [
    "rehype",
    "unified",
    "shiki",
    "code",
    "plugin"
  ],
  "author": "Benoit Averty <benoit.averty@pm.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BenoitAverty/rehype-plugin-advanced-code/issues"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "homepage": "https://github.com/BenoitAverty/rehype-plugin-advanced-code#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/hast": "^2.3.1",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "esbuild": "^0.11.21",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.3",
    "typescript": "^4.2.4",
    "unified": "^9.2.1"
  },
  "dependencies": {
    "hastscript": "^7.0.1",
    "shiki": "^0.9.3",
    "unist-util-visit": "^3.1.0"
  },
  "files": [
    "package.json",
    "package-lock.json",
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ]
}

{
  "name": "rehype-plugin-advanced-code",
  "version": "1.0.0",
  "description": "Syntax Highlighting and more for code tags",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:esm": "esbuild src/index.ts --platform=node --target=node11 --format=esm --outdir=dist/esm",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --external:shiki --target=node11 --format=cjs --outdir=dist/cjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenoitAverty/rehype-plugin-advanced-code.git"
  },
  "keywords": [
    "rehype",
    "unified",
    "shiki",
    "code",
    "plugin"
  ],
  "author": "Benoit Averty <benoit.averty@pm.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BenoitAverty/rehype-plugin-advanced-code/issues"
  },
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "homepage": "https://github.com/BenoitAverty/rehype-plugin-advanced-code#readme",
  "devDependencies": {
    "@types/hast": "^2.3.1",
    "@types/unist": "^2.0.3",
    "esbuild": "^0.11.21",
    "unified": "^9.2.1"
  },
  "dependencies": {
    "hastscript": "^7.0.1",
    "shiki": "^0.9.3",
    "unist-util-visit": "^3.1.0"
  }
}
